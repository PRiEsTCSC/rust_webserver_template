[package]
name = "{{project-name}}"
version = "0.1.0"
edition = "2021"
description = "{{description}}"
authors = ["{{author_name}}"]

[dependencies]
actix-governor = "0.8.0"
actix-web = "4.11.0"
actix-cors = "0.7.1"
actix-rt = "2"
chrono = { version = "0.4.40", features = ["serde"] }
dotenv = "0.15.0"
log = "0.4.27"
log4rs = "1.3.0"
rust_decimal = "1.36.0"
serde = { version = "1.0.218", features = ["derive"] }
serde_json = "1.0.139"
sqlx = { version = "0.8.6", features = ["runtime-tokio", "rust_decimal", "chrono", "uuid", "postgres", "mysql"] }

{% if database == "postgres" %}
sqlx-postgres = { version = "0.8.3"}

{% elsif database == "mysql" %}
sqlx-mysql = { version = "0.8.3"}

{% elsif database == "sqlite" %}
sqlx-sqlite = { version = "0.8.3"}
{% endif %}


tokio = { version = "1.43.0", features = ["full"] }
uuid = { version = "1.15.1", features = ["v4", "serde"] }